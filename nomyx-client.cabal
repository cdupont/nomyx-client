  Main-Is:             Main.hs
  ghc-options:         -Wall
  other-modules:       Nomyx.Client.Client
                       Nomyx.Client.Types
  build-depends:       base,
                       nomyx-api,
                       nomyx-language,
                       nomyx-core,
                       either -any,
                       mtl                    >= 2.1 && < 2.3,
                       servant,
                       servant-server,
                       servant-client,
                       swagger2,
                       lens -any,
                       optparse-applicative,
                       filepath,
                       yaml,
                       bytestring,
                       lens,
                       aeson,
                       http-client
  default-language:    Haskell2010

